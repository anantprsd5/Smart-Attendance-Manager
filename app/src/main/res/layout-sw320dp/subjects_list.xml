<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_margin="@dimen/card_layout_margin"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/subject_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans"
                        android:gravity="center|start"
                        android:paddingStart="@dimen/text_padding_left_card"
                        android:paddingLeft="@dimen/text_padding_left_card"
                        android:text="Physics"
                        android:paddingBottom="2dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                    <TextView
                        android:id="@+id/tap_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to add to Monday's time table"
                        android:fontFamily="@font/product_sans"
                        android:paddingStart="@dimen/text_padding_left_card"
                        android:paddingLeft="@dimen/text_padding_left_card"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/tick_image_view"
                android:layout_width="@dimen/tick_image_width"
                android:layout_height="@dimen/tick_image_height"
                android:layout_gravity="center|end"
                android:contentDescription="@string/subject_added_to_time_table"
                android:paddingEnd="@dimen/image_padding_right"
                android:paddingRight="@dimen/image_padding_right"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_check_circle_black_24dp" />

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>